---
import { defaultLang } from '../i18n/strings'
import { useTranslations } from '../i18n/utils'
import IconEntry from './IconEntry.astro'

interface Props {
  lang?: 'en' | 'pt'
}

const { lang = defaultLang } = Astro.props as Props
const t = useTranslations(lang)
---

<header class="identity">
  <p class="eyebrow">{t('header.resumeLabel')}</p>
  <h1>Henrique Pinheiro</h1>
  <p class="role">{t('header.jobTitle')}</p>
  <div class="divider"></div>
  <div class="contacts">
    <IconEntry svg="phone">+55.21.993694515</IconEntry>
    <a href="mailto:henrique@mendespinheiro.com">
      <IconEntry svg="mail">henrique@mendespinheiro.com</IconEntry>
    </a>
    <a href="https://github.com/phenome" target="_blank" rel="noreferrer">
      <IconEntry svg="github">github.com/phenome</IconEntry>
    </a>
    <a href="https://linkedin.com/in/phenome" target="_blank" rel="noreferrer">
      <IconEntry svg="linkedin">linkedin.com/in/phenome</IconEntry>
    </a>
  </div>
</header>
