---
interface Props {
  title: string
  company: string
  from: string
  to: string
  description: string
}
const { title, company, from, to, description } = Astro.props
---

<div class="flex gap-2">
  <div
    class="flex flex-col items-center self-center w-20 gap-1 text-sm shrink-0 whitespace-nowrap"
  >
    <div>{from}</div>
    <div class="w-1 h-1 rounded-full bg-slate-600"></div>
    <div>{to}</div>
  </div>
  <div class="self-stretch w-4 border-l border-slate-600">
    <div class="w-0 h-0 mt-6 border-l-8 border-l-slate-600 border-y-4"></div>
  </div>
  <div class="pt-4">
    <div class="text-lg font-bold">{title}</div>
    <div class="mb-4 mt-[-5px]">{company}</div>
    <div class="text-balance">{description}</div>
  </div>
</div>
