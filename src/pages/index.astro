<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Henrique Pinheiro - Resume</title>
    <meta http-equiv="refresh" content="0;url=en/" />
    <script is:inline>
      (() => {
        const langs = navigator.languages && navigator.languages.length
          ? navigator.languages
          : [navigator.language || 'en'];
        const prefersPortuguese = langs.some((lang) =>
          String(lang).toLowerCase().startsWith('pt')
        );
        window.location.replace(prefersPortuguese ? 'pt/' : 'en/');
      })();
    </script>
  </head>
  <body>
    <p><a href="en/">English Resume</a></p>
    <p><a href="pt/">Currículo em Português</a></p>
  </body>
